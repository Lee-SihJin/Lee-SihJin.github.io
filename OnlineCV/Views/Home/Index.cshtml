@model OnlineCV.ViewModels.CVViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.PersonalInfo.FullName · IT Portfolio</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container nav-container">
            <a href="#" class="nav-logo">SL</a>
            <ul class="nav-menu">
                <li><a href="#about">About</a></li>
                <li><a href="#skills">Skills</a></li>
                <li><a href="#projects">Projects</a></li>
                <li><a href="#education">Education</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
            <a href="@Url.Action("DownloadPDF", "Home")" class="nav-download">
                <i class="fas fa-download"></i> CV
            </a>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-grid">
                <div class="hero-content">
                    <span class="hero-greeting">👋 Hello, I'm</span>
                    <h1 class="hero-name">@Model.PersonalInfo.FullName</h1>
                    <div class="hero-title">@Model.PersonalInfo.Title</div>
                    <p class="hero-bio">@Model.PersonalInfo.AboutMe</p>
                    <div class="hero-stats">
                        <div class="stat-item">
                            <span class="stat-number">2+</span>
                            <span class="stat-label">Projects</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">5+</span>
                            <span class="stat-label">Technologies</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">2026</span>
                            <span class="stat-label">Graduation</span>
                        </div>
                    </div>
                    <div class="hero-actions">
                        <a href="#contact" class="btn btn-primary">
                            <i class="fas fa-paper-plane"></i> Get in touch
                        </a>
                        <a href="@Model.PersonalInfo.GitHubUrl" target="_blank" class="btn btn-outline">
                            <i class="fab fa-github"></i> GitHub
                        </a>
                    </div>
                </div>
                <div class="hero-image">
                    <div class="image-wrapper">
                        @if (!string.IsNullOrEmpty(Model.PersonalInfo.PhotoUrl))
                        {
                            <img src="@Model.PersonalInfo.PhotoUrl" alt="@Model.PersonalInfo.FullName">
                        }
                        else
                        {
                            <div class="placeholder-avatar">
                                <span>@Model.PersonalInfo.FullName.Split(' ').Select(n => n[0]).Take(2).Select(c => c.ToString()).Aggregate((a, b) => a + b)</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="section">
        <div class="container">
            <div class="section-header">
                <span class="section-subtitle">Get to know me</span>
                <h2 class="section-title">About Me</h2>
                <div class="section-divider"></div>
            </div>
            <div class="about-content">
                <div class="about-text">
                    <p class="about-description">@Model.PersonalInfo.AboutMe</p>
                    <div class="about-info">
                        <div class="info-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>@Model.PersonalInfo.Location</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-envelope"></i>
                            <a href="mailto:@Model.PersonalInfo.Email">@Model.PersonalInfo.Email</a>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-graduation-cap"></i>
                            <span>@Model.Education.FirstOrDefault()?.Degree</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="section section-alt">
        <div class="container">
            <div class="section-header">
                <span class="section-subtitle">What I bring to the table</span>
                <h2 class="section-title">Technical Skills</h2>
                <div class="section-divider"></div>
            </div>
            <div class="skills-grid">
                @foreach (var skillGroup in Model.Skills.GroupBy(s => s.Category))
                {
                    <div class="skill-card">
                        <h3 class="skill-category">
                            @switch (skillGroup.Key)
                            {
                                case "Languages":
                                    <i class="fas fa-code"></i>
                                    break;
                                case "Frameworks":
                                    <i class="fas fa-cubes"></i>
                                    break;
                                case "Tools":
                                    <i class="fas fa-tools"></i>
                                    break;
                                case "Soft Skills":
                                    <i class="fas fa-users"></i>
                                    break;
                                default:
                                    <i class="fas fa-star"></i>
                                    break;
                            }
                            @skillGroup.Key
                        </h3>
                        <div class="skill-items">
                            @foreach (var skill in skillGroup)
                            {
                                <span class="skill-item">@skill.Name</span>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="section">
        <div class="container">
            <div class="section-header">
                <span class="section-subtitle">My recent work</span>
                <h2 class="section-title">Featured Projects</h2>
                <div class="section-divider"></div>
            </div>
            <div class="projects-grid">
                @foreach (var project in Model.Projects)
                {
                    <div class="project-card">
                        <div class="project-header">
                            <h3 class="project-name">@project.Name</h3>
                            <span class="project-year">@project.Year</span>
                        </div>
                        <p class="project-description">@project.Description</p>
                        <div class="project-tech">
                            @foreach (var tech in project.TechStack.Split(',').Select(t => t.Trim()))
                            {
                                <span class="tech-tag">@tech</span>
                            }
                        </div>
                        <div class="project-footer">
                            <a href="@project.GitHubUrl" target="_blank" class="project-link">
                                <i class="fab fa-github"></i> View Code
                            </a>
                            @if (!string.IsNullOrEmpty(project.LiveUrl))
                            {
                                <a href="@project.LiveUrl" target="_blank" class="project-link">
                                    <i class="fas fa-external-link-alt"></i> Live Demo
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Education & Experience Section -->
    <section id="education" class="section section-alt">
        <div class="container">
            <div class="section-header">
                <span class="section-subtitle">My background</span>
                <h2 class="section-title">Education & Experience</h2>
                <div class="section-divider"></div>
            </div>
            <div class="timeline-grid">
                <!-- Education Timeline -->
                <div class="timeline">
                    <h3 class="timeline-title">
                        <i class="fas fa-graduation-cap"></i> Education
                    </h3>
                    @foreach (var edu in Model.Education)
                    {
                        <div class="timeline-item">
                            <div class="timeline-dot"></div>
                            <div class="timeline-content">
                                <div class="timeline-date">@edu.ExpectedGraduation</div>
                                <h4 class="timeline-heading">@edu.Degree</h4>
                                <div class="timeline-subheading">@edu.Institution</div>
                                @if (!string.IsNullOrEmpty(edu.Modules))
                                {
                                    <p class="timeline-text">
                                        <strong>Key modules:</strong> @edu.Modules
                                    </p>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Experience Timeline -->
                @if (Model.Experiences != null && Model.Experiences.Any())
                {
                    <div class="timeline">
                        <h3 class="timeline-title">
                            <i class="fas fa-briefcase"></i> Experience
                        </h3>
                        @foreach (var exp in Model.Experiences)
                        {
                            <div class="timeline-item">
                                <div class="timeline-dot"></div>
                                <div class="timeline-content">
                                    <div class="timeline-date">@exp.Duration</div>
                                    <h4 class="timeline-heading">@exp.Position</h4>
                                    <div class="timeline-subheading">@exp.Company</div>
                                    <p class="timeline-text">@exp.Description</p>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Interests Section -->
    @if (Model.Interests != null && Model.Interests.Any())
    {
        <section class="section">
            <div class="container">
                <div class="section-header">
                    <span class="section-subtitle">Beyond the code</span>
                    <h2 class="section-title">Interests</h2>
                    <div class="section-divider"></div>
                </div>
                <div class="interests-grid">
                    @foreach (var interest in Model.Interests)
                    {
                        <div class="interest-card">
                            <span class="interest-icon">@interest.Icon</span>
                            <span class="interest-name">@interest.Name</span>
                        </div>
                    }
                </div>
            </div>
        </section>
    }

    <!-- Contact Section -->
    <section id="contact" class="section contact-section">
        <div class="container">
            <div class="contact-card">
                <div class="contact-header">
                    <h2 class="contact-title">Let's work together</h2>
                    <p class="contact-subtitle">I'm currently looking for new opportunities. Whether you have a question or just want to say hi, I'll get back to you!</p>
                </div>
                <div class="contact-links">
                    <a href="mailto:@Model.PersonalInfo.Email" class="contact-link">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-info">
                            <span class="contact-label">Email</span>
                            <span class="contact-value">@Model.PersonalInfo.Email</span>
                        </div>
                    </a>
                    @if (!string.IsNullOrEmpty(Model.PersonalInfo.LinkedInUrl))
                    {
                        <a href="@Model.PersonalInfo.LinkedInUrl" target="_blank" class="contact-link">
                            <div class="contact-icon">
                                <i class="fab fa-linkedin"></i>
                            </div>
                            <div class="contact-info">
                                <span class="contact-label">LinkedIn</span>
                                <span class="contact-value">Connect with me</span>
                            </div>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(Model.PersonalInfo.GitHubUrl))
                    {
                        <a href="@Model.PersonalInfo.GitHubUrl" target="_blank" class="contact-link">
                            <div class="contact-icon">
                                <i class="fab fa-github"></i>
                            </div>
                            <div class="contact-info">
                                <span class="contact-label">GitHub</span>
                                <span class="contact-value">View my code</span>
                            </div>
                        </a>
                    }
                </div>
                <div class="contact-footer">
                    <p>References available upon request</p>
                    <a href="@Url.Action("DownloadPDF", "Home")" class="btn btn-light">
                        <i class="fas fa-download"></i> Download CV (PDF)
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <p class="footer-copyright">
                    © @DateTime.Now.Year @Model.PersonalInfo.FullName. All rights reserved.
                </p>
                <p class="footer-made">
                    Made with <i class="fas fa-heart" style="color: #ef4444;"></i> in Johannesburg
                </p>
            </div>
        </div>
    </footer>
</body>
</html>